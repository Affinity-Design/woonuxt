      dedupe: true, // Deduplicate identical requests
    },

    // Custom cache lookup function
    getCachedData(key) {
      console.log(`ðŸ” CAT Looking for cached data with key: ${key}`);
      const existingData =
        nuxtApp.payload?.data?.[cacheKey] || nuxtApp.static?.data?.[cacheKey];

      if (existingData) {
        console.log(`ðŸ’° CAT Found cached data for ${key}!`);
        return existingData;
      }

      console.log(`âŒ CAT No cached data found for ${key}`);
      return undefined;
    },
  }
);

